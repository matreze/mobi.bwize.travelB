<?xml version="1.0" encoding="utf-8"?>
<!-- travelB 2012 - weather details for weather fragment -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<TableLayout android:layout_width="wrap_content"
 android:layout_height="wrap_content" android:stretchColumns="*"
 android:background="#000000">
 <TableRow android:layout_margin="2dp" android:background="#cc9900">
 <TextView
  android:id="@+id/text_weather_desc_view"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Current weather is:"
  android:textAppearance="?android:attr/textAppearanceLarge" />
  <TextView
   android:id="@+id/weather_desc_view"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:text="Large Text"
   android:textAppearance="?android:attr/textAppearanceLarge" />  
 </TableRow>
  <TableRow android:layout_margin="2dp" android:background="#cc9900">
 <TextView
  android:id="@+id/text_temp_view"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Temerature is:"
  android:textAppearance="?android:attr/textAppearanceLarge" />
  <TextView
   android:id="@+id/temp_view"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:text="Large Text"
   android:textAppearance="?android:attr/textAppearanceLarge" />  
 </TableRow>
   <TableRow android:layout_margin="2dp" android:background="#cc9900">
 <TextView
  android:id="@+id/text_wind_string"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Wind condition:"
  android:textAppearance="?android:attr/textAppearanceLarge" />
  <TextView
   android:id="@+id/wind_string"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:text="Large Text"
   android:textAppearance="?android:attr/textAppearanceLarge" />  
 </TableRow>
    <TableRow android:layout_margin="2dp" android:background="#cc9900">
  <TextView
  android:id="@+id/text_feelsLike_view"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Feels like:"
  android:textAppearance="?android:attr/textAppearanceLarge" />
  <TextView
   android:id="@+id/feelsLike_view"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:text="Large Text"
   android:textAppearance="?android:attr/textAppearanceLarge" />  
 </TableRow>

</TableLayout>
</LinearLayout>