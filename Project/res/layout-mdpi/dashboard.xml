<?xml version="1.0" encoding="utf-8"?>

 
  
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bgroundb" >
    
 <LinearLayout 
     android:layout_width="wrap_content" 
     android:id="@+id/linearLayout1" 
     android:layout_height="wrap_content"
     android:padding="5dip"
     android:layout_margin="10dip"> 
    
<ImageButton
     android:id="@+id/imageButton_back"
     android:background="@null"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/back" />   
    
  <TextView
         android:id="@+id/text_destination_name_xml"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/destination_name"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="#cc9900"
         android:textStyle="bold"
         android:layout_margin="10dip" />  
         
</LinearLayout>

    
 <LinearLayout 
     android:layout_width="wrap_content" 
     android:id="@+id/linearLayout1" 
     android:layout_height="wrap_content"
     android:background="#666"
     android:padding="10dip"
     android:layout_margin="10dip">
     
  	<TextView
      	 android:id="@+id/text_countdown"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/countdownto"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="#fff"
         android:textStyle="bold" />
     
   <TextView
         android:id="@+id/text_destination_countdown_xml"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="2 days: 4 hours : 32 mins "
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="#fff"
         android:textStyle="bold" />

 </LinearLayout>

  <LinearLayout 
     android:layout_width="wrap_content" 
     android:id="@+id/linearLayout1" 
     android:layout_height="wrap_content"
     android:padding="5dip"
     android:layout_margin="10dip">
   
 <ImageButton
     android:id="@+id/imageButton_weather"
     android:background="@null"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/weather" />

 <ImageButton
     android:id="@+id/imageButton_wiki"
     android:background="@null"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/wikipedia" />
  
   <ImageButton
     android:id="@+id/imageButton_currency"
     android:background="@null"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/currency" />
   
   </LinearLayout>

</LinearLayout>
